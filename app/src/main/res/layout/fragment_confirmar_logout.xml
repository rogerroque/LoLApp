<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfirmarLogoutFragment"
    android:background="#11414E">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/quieresSalirTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cerrar_sesion"
            android:textSize="15sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ubuntu_bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quieresSalirTexto"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/buttomConfirmar"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="SI" />

            <Button
                android:id="@+id/buttomCancelar"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="NO" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>