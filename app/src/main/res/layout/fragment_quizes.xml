<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0F2D35"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <TextView
        android:id="@+id/textQuizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Elige tu quiz"
        android:textColor="#F7FFC8"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageCampeonesQuizes"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/campeonesquizes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuizes"
        />

    <ImageView
        android:id="@+id/imageEsportsQuizes"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/esportsquizes"
        app:layout_constraintTop_toBottomOf="@id/imageCampeonesQuizes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imageItemsQuizes"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/itemsquizes"
        app:layout_constraintTop_toBottomOf="@id/imageEsportsQuizes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

