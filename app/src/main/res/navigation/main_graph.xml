<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashScreenFragment">


    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.spashscreen2.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/cambiarIdiomaFragment"
        android:name="com.example.spashscreen2.CambiarIdiomaFragment"
        android:label="Cambiar idioma"
        tools:layout="@layout/fragment_cambiar_idioma" />
    <fragment
        android:id="@+id/verAmigosFragment"
        android:name="com.example.spashscreen2.AmigosFragment"
        android:label="Amigos"
        tools:layout="@layout/fragment_amigos" />
    <fragment
        android:id="@+id/calendarioFragment"
        android:name="com.example.spashscreen2.calendarioFragment"
        android:label="Calendario"
        tools:layout="@layout/fragment_calendario" />
    <fragment
        android:id="@+id/appInfoFragment"
        android:name="com.example.spashscreen2.appInfoFragment"
        android:label="App informacion"
        tools:layout="@layout/fragment_app_info" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.spashscreen2.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" >
    </fragment>
    <fragment
        android:id="@+id/quizesFragment"
        android:name="com.example.spashscreen2.QuizesFragment"
        android:label=""
        tools:layout="@layout/fragment_quizes" />
    <fragment
        android:id="@+id/puntuacionesFragment"
        android:name="com.example.spashscreen2.PuntuacionesFragment"
        android:label=""
        tools:layout="@layout/fragment_puntuaciones" />
    <fragment
        android:id="@+id/amigosFragment"
        android:name="com.example.spashscreen2.ChatFragment"
        android:label=""
        tools:layout="@layout/fragment_chat" />
    <dialog
        android:id="@+id/confirmarLogoutFragment"
        android:name="com.example.spashscreen2.ConfirmarLogoutFragment"
        android:label="fragment_confirmar_logout"
        tools:layout="@layout/fragment_confirmar_logout" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.spashscreen2.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_firstScreenFragment"
            app:destination="@id/firstScreenFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/firstScreenFragment"
        android:name="com.example.spashscreen2.FirstScreenFragment"
        android:label="fragment_first_screen"
        tools:layout="@layout/fragment_first_screen" >
        <action
            android:id="@+id/action_firstScreenFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_firstScreenFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.spashscreen2.LogInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.spashscreen2.RegisterFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>